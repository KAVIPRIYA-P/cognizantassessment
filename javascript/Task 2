const eventName = "Community Meetup";
const eventDate = "2025-06-15";
let availableSeats = 50;

const eventInfo = `Event: ${eventName}\nDate: ${eventDate}\nAvailable Seats: ${availableSeats}`;
console.log(eventInfo);

function registerParticipant() {
  if (availableSeats > 0) {
    availableSeats--;
    console.log(`Registration successful. Seats left: ${availableSeats}`);
  } else {
    console.log("Sorry, no more seats available.");
  }
}


registerParticipant();
registerParticipant();

